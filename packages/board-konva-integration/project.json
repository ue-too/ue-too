{
  "name": "board-konva-integration",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/board-konva-integration/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && bun run ../../scripts/build.ts",
        "cwd": "packages/board-konva-integration"
      },
      "dependsOn": [
        {
          "projects": ["math", "being", "board"],
          "target": "build"
        }
      ]
    },
    "build:bun": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && bun run ../../scripts/build.ts",
        "cwd": "packages/board-konva-integration"
      },
      "dependsOn": [
        {
          "projects": ["math", "being", "board"],
          "target": "build"
        }
      ]
    },
    "move-package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../scripts/move-package.mjs",
        "cwd": "packages/board-konva-integration"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test",
        "cwd": "packages/board-konva-integration"
      }
    },
    "nx-release-publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../../scripts/publish-package.mjs",
        "cwd": "packages/board-konva-integration/dist"
      }
    },
    "docs:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf ../../docs/board-konva-integration && bun run typedoc --options typedoc.json --skipErrorChecking",
        "cwd": "packages/board-konva-integration"
      }
    }
  },
  "tags": [],
  "implicitDependencies": []
}
