{
  "name": "board",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/board/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && bun run ../../scripts/build.ts --external @ue-too/math --external @ue-too/being",
        "cwd": "packages/board"
      },
      "dependsOn": [
        {
          "projects": ["math", "being"],
          "target": "build"
        }
      ]
    },
    "build:bun": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && bun run ../../scripts/build.ts --external @ue-too/math --external @ue-too/being",
        "cwd": "packages/board"
      },
      "dependsOn": [
        {
          "projects": ["math", "being"],
          "target": "build"
        }
      ]
    },
    "move-package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../scripts/move-package.mjs",
        "cwd": "packages/board"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test",
        "cwd": "packages/board"
      }
    },
    "nx-release-publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../../scripts/publish-package.mjs",
        "forwardAllArgs": false,
        "cwd": "packages/board/dist"
      }
    },
    "docs:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf ../../docs/board && bun run typedoc --options typedoc.json --skipErrorChecking",
        "cwd": "packages/board"
      }
    }
  },
  "tags": [],
  "implicitDependencies": [
    "math",
    "being"
  ]
}
