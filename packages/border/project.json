{
  "name": "border",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/border/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && bun run ../../scripts/build.ts --external @ue-too/math",
        "cwd": "packages/border"
      },
      "dependsOn": [
        {
          "projects": ["math"],
          "target": "build"
        }
      ]
    },
    "build:bun": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && bun run ../../scripts/build.ts --external @ue-too/math",
        "cwd": "packages/border"
      },
      "dependsOn": [
        {
          "projects": ["math"],
          "target": "build"
        }
      ]
    },
    "move-package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../scripts/move-package.mjs",
        "cwd": "packages/border"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test",
        "cwd": "packages/border"
      }
    },
    "nx-release-publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../../scripts/publish-package.mjs",
        "forwardAllArgs": false,
        "cwd": "packages/border/dist"
      }
    },
    "docs:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf ../../docs/border && bun run typedoc --options typedoc.json --skipErrorChecking",
        "cwd": "packages/border"
      }
    }
  },
  "tags": [],
  "implicitDependencies": [
    "math"
  ]
}
