{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "board-react-adapter",
    "projectType": "library",
    "sourceRoot": "packages/board-react-adapter/src",
    "tags": [],
    "targets": {
        "build": {
            "dependsOn": [
                {
                    "projects": ["math", "board"],
                    "target": "build"
                }
            ],
            "executor": "nx:run-commands",
            "options": {
                "command": "rm -rf dist && bun run ../../scripts/build.ts --external react --external react-dom --external @ue-too/math --external @ue-too/board",
                "cwd": "packages/board-react-adapter"
            }
        },
        "build:bun": {
            "dependsOn": [
                {
                    "projects": ["math", "board"],
                    "target": "build"
                }
            ],
            "executor": "nx:run-commands",
            "options": {
                "command": "rm -rf dist && bun run ../../scripts/build.ts --external react --external react-dom --external @ue-too/math --external @ue-too/board",
                "cwd": "packages/board-react-adapter"
            }
        },
        "docs:build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "rm -rf ../../docs/board-react-adapter && bun run typedoc --options typedoc.json --skipErrorChecking",
                "cwd": "packages/board-react-adapter"
            }
        },
        "move-package": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node ../../scripts/move-package.mjs",
                "cwd": "packages/board-react-adapter"
            }
        },
        "nx-release-publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node ../../../scripts/publish-package.mjs",
                "cwd": "packages/board-react-adapter/dist",
                "forwardAllArgs": false
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "bun test",
                "cwd": "packages/board-react-adapter"
            }
        }
    }
}
