{
  "name": "curve",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/curve/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && bun run ../../scripts/build.ts --external @ue-too/math",
        "cwd": "packages/curve"
      }
    },
    "build:bun": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && bun run ../../scripts/build.ts --external @ue-too/math",
        "cwd": "packages/curve"
      }
    },
    "move-package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../scripts/move-package.mjs",
        "cwd": "packages/curve"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test",
        "cwd": "packages/curve"
      }
    },
    "nx-release-publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish --access public --registry https://registry.npmjs.org --no-git-checks",
        "cwd": "packages/curve/dist"
      }
    },
    "docs:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf docs/board && bun run typedoc --entryPoints packages/board/src/index.ts --out docs/board"
      }
    }
  },
  "tags": [],
  "implicitDependencies": [
    "math"
  ]
}
