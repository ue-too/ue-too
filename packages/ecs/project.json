{
  "name": "ecs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ecs/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && bun run ../../scripts/build.ts --external @ue-too/math @ue-too/being",
        "cwd": "packages/ecs"
      }
    },
    "build:bun": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && bun run ../../scripts/build.ts --external @ue-too/math @ue-too/being",
        "cwd": "packages/ecs"
      }
    },
    "move-package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../scripts/move-package.mjs",
        "cwd": "packages/ecs"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test",
        "cwd": "packages/ecs"
      }
    },
    "nx-release-publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish --access public --registry https://registry.npmjs.org --no-git-checks $( [ \"{args.dryRun}\" = \"true\" ] && echo \"--dry-run\" )",
        "forwardAllArgs": false,
        "cwd": "packages/ecs/dist"
      }
    },
    "docs:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf docs/ecs && bun run typedoc --entryPoints packages/ecs/src/index.ts --out docs/ecs"
      }
    }
  },
  "tags": []
}
