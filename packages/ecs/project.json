{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "ecs",
    "projectType": "library",
    "sourceRoot": "packages/ecs/src",
    "tags": [],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "rm -rf dist && bun run ../../scripts/build.ts --external @ue-too/math --external @ue-too/being",
                "cwd": "packages/ecs"
            }
        },
        "build:bun": {
            "executor": "nx:run-commands",
            "options": {
                "command": "rm -rf dist && bun run ../../scripts/build.ts --external @ue-too/math --external @ue-too/being",
                "cwd": "packages/ecs"
            }
        },
        "docs:build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "rm -rf ../../docs/ecs && bun run typedoc --options typedoc.json --skipErrorChecking",
                "cwd": "packages/ecs"
            }
        },
        "move-package": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node ../../scripts/move-package.mjs",
                "cwd": "packages/ecs"
            }
        },
        "nx-release-publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node ../../../scripts/publish-package.mjs",
                "cwd": "packages/ecs/dist",
                "forwardAllArgs": false
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "bun test",
                "cwd": "packages/ecs"
            }
        }
    }
}
