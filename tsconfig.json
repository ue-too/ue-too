{
    "compilerOptions": {
        "target": "es6",
        "esModuleInterop": true,
        "outDir": "./build",
        "strict": false,
        "moduleResolution": "node",
        // "sourceMap": true,
        "resolveJsonModule": true,
        // "declaration": true,
        // "declarationDir": "build",
        "lib": ["es6", "dom"],
        "typeRoots": ["node_modules/@types"],
        "noEmitOnError": true,
